{
  "extends": "eslint-config-airbnb",
  "env": {
    "mocha": true,
    "node": true
  },
  "globals": {
    "assert": true,
    "expect": true,
    "spy": true,
  },
  "rules": {
    "func-names": 0,
    "prefer-const": 0,
    "padded-blocks": 0,
    "no-use-before-define": [2, "nofunc"],
    "no-unused-expressions": 0
  }
}
